{
  "apiVersion": "v1",
  "kind": "Pod",
  "metadata": {
    "name": "start-up",
    "labels": {
      "app": "start-up-app",
      "task": ""
    },
    "namespace": "ncdc-brain-age"
  },
  "spec": {
    "volumes": [
      {
        "name": "data",
        "persistentVolumeClaim": {
          "claimName": "brain-age-test"
        }
      }
    ],
    "containers": [
      {
        "name": "input-watcher",
        "image": "busybox:1.33",
        "command": [],
        "volumeMounts": [
          {
            "name": "data",
            "mountPath": "/mnt/data"
          }
        ],
        "resources": {
          "requests": {
            "nvidia.com/gpu": 1
          },
          "limits": {
            "nvidia.com/gpu": 1
          }
        }
      }
    ],
    "restartPolicy": "Never"
  }
}