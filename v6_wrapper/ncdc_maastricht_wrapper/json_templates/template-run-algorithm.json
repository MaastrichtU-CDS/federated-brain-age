{
    "apiVersion": "v1",
    "kind": "Pod",
    "metadata": {
      "name": "run-algorithm",
      "labels": {
        "app": "run-algorithm-app"
      },
      "namespace": "ncdc-brain-age"
    },
    "spec": {
      "volumes": [
        {
          "name": "data",
          "persistentVolumeClaim": {
            "claimName": "brain-age-test"
          }
        }
      ],
      "containers": [
        {
          "name": "algorithm-container",
          "image": "pmateus/brain-age-gpu:1.0.0",
          "volumeMounts": [
            {
              "name": "data",
              "mountPath": "/mnt/data"
            }
          ],
          "resources": {
            "requests": {
              "nvidia.com/gpu": 1
            },
            "limits": {
              "nvidia.com/gpu": 1
            }
          },
          "envFrom": [
            {
              "configMapRef": {
                "name": "ncdc-brain-age-config"
              }
            }
          ]
        }
      ],
      "restartPolicy": "Never"
    }
  }